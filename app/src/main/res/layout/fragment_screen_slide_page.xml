<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfac1"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="22sp"
                    android:textColor="#ff0011"
                    android:textStyle="bold"
                    android:text="Câu 1" />

                <ImageView
                    android:id="@+id/imageView_Frag"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/ic_launcher_background" />


            </LinearLayout>


            <RadioGroup
                android:id="@+id/radioGroup_Ans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp">

                <RadioButton
                    android:id="@+id/rad_A"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:textSize="16sp"
                    android:textColor="#1502c7"
                    android:textStyle="bold"
                    android:text="Trả lời 1" />

                <RadioButton
                    android:id="@+id/rad_B"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:textSize="16sp"
                    android:textColor="#1502c7"
                    android:textStyle="bold"
                    android:text="Trả lời 2" />

                <RadioButton
                    android:id="@+id/rad_C"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:textSize="16sp"
                    android:textColor="#1502c7"
                    android:textStyle="bold"
                    android:text="Trả lời 3" />

                <RadioButton
                    android:id="@+id/rad_D"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:textSize="16sp"
                    android:textColor="#1502c7"
                    android:textStyle="bold"
                    android:text="Trả lời 4" />
            </RadioGroup>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
